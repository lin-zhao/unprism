<%= form_tag( method: "post") do %>
  <%= label_tag(:pk_label, "Secret:") %><br>
  <%= text_area_tag(:secret_key, params[:secret_key], :rows => 2, :cols => 60 ) %><br>
  <%= label_tag(:enc_label, "Encrypted Content::") %><br>
  <%= text_area_tag(:encrypted_str, params[:encrypted_str], :rows => 50, :cols => 120 ) %><br>
  <%= submit_tag("Decrypt") %><br>
  <%= text_area_tag(:decrypted_str, params[:decrypted_str], :rows => 50, :cols => 150 ) %><br>

<%end%>
